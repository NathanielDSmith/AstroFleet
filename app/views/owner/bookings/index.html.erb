<div style="display: flex; width: 100%; margin-top: 80px;">
  <div style="flex: 1; max-width: 25%;">
    <!-- Left column (1/4 width) -->
    <div style="display: flex; flex-direction: column; align-items: center; padding: 16px; padding-top: 56px; padding-bottom: 56px; background-color: #25233E; margin-left: 80px; margin-right: 20px; border-radius: 16px; margin-bottom: 32px;" >
      <%= image_tag 'user_thumbnail', alt: 'Spaceship', style: 'width: 100px; height: 100px; object-fit: cover; border-radius: 50%;' %>
      <p style="margin-top: 8px; font-size: 20px; font-weight: 600; margin-bottom: 0px;">Anakin Skywalker</p>
      <p style="text-align: center; font-size: 16px; margin-bottom: 15px;">Anakin@starwars.com</p>
      <hr style="width: 95%; margin: 8px 0; border: none; border-top: 1px solid #ccc;">
      <p style="text-align: left; margin-bottom: 0px; width: 95%">Your spaceships</p>
      <hr style="width: 95%; margin: 8px 0; border: none; border-top: 1px solid #ccc;">
      <% @spaceships.each do |spaceship| %>
        <div style="display: flex; align-items: center; margin-bottom: 12px; width: 100%">
          <%= cl_image_tag(spaceship.photo.key, style: 'width: 40px; height: 40px; object-fit: cover; border-radius: 8px; margin-right: 12px;') %>
          <span style="font-size: 16px;"><%= spaceship.name %></span>
        </div>
      <% end %>
      <hr style="width: 95%; margin: 8px 0; border: none; border-top: 1px solid #ccc;">
      <button style="padding: 10px 20px; background-color: #1976d2; width: 95%; color: white; border: none; border-radius: 4px; cursor: pointer;">
        Add a spaceship
      </button>
    </div>
  </div>

  <div style="flex: 3; max-width: 75%;">
    <!-- Right column (3/4 width) -->
    <div style="display: flex; flex-direction: column; align-items: left; padding: 42px; padding-top: 56px; padding-bottom: 56px; background-color: #25233E; margin-left: 10px; margin-right: 80px; border-radius: 16px; margin-bottom: 32px;" >
      <% @bookings.each do |booking| %>
        <%= render "owner/bookings/card", booking: booking %>
      <% end %>
    </div>
  </div>
</div>
