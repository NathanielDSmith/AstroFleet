<div style="display: flex; width: 100%;">
  <div style="flex: 1; max-width: 25%;">
    <!-- Left column (1/4 width) -->
    <div style="display: flex; flex-direction: column; align-items: center; padding: 16px;">
      <%= image_tag 'Death Star', alt: 'Spaceship', style: 'width: 100px; height: 100px; object-fit: cover; border-radius: 50%;' %>
      <h2 style="margin-top: 16px;">Anakin Skywalker</h2>
      <p style="text-align: center;">Anakin@starwars.com</p>
      <hr style="width: 80%; margin: 24px 0; border: none; border-top: 1px solid #ccc;">
      <h3>Your spaceships</h3>
      <hr style="width: 80%; margin: 24px 0; border: none; border-top: 1px solid #ccc;">
      <% @spaceships.each do |spaceship| %>
        <div style="display: flex; align-items: center; margin-bottom: 12px; width: 100%">
          <%= cl_image_tag(spaceship.photo.key, style: 'width: 40px; height: 40px; object-fit: cover; border-radius: 8px; margin-right: 12px;') %>
          <span style="font-size: 16px;"><%= spaceship.name %></span>
        </div>
      <% end %>
      <hr style="width: 80%; margin: 24px 0; border: none; border-top: 1px solid #ccc;">
      <button style="padding: 10px 20px; background-color: #1976d2; color: white; border: none; border-radius: 4px; cursor: pointer;">
        Add a spaceship
      </button>
    </div>
  </div>
  <div style="flex: 3; max-width: 75%;">
    <!-- Right column (3/4 width) -->
  </div>
</div>
