<div class="col">
  <div class="card h-100 shadow-sm">
    <%= image_tag(
          spaceship.photo.present? ? spaceship.photo : "https://res.cloudinary.com/demo/image/upload/v1680000000/default_ship.jpg",
          class: "card-img-top img-fluid object-fit-cover",
          alt: "#{spaceship.name} photo",
          style: "height: 200px; background-color: #ffffff;"
        ) %>

    <div class="card-body d-flex flex-column">
      <h5 class="card-title mb-2"><%= spaceship.name %></h5>

      <p class="mb-1"><strong>Price:</strong> $<%= number_with_delimiter(spaceship.price) %></p>
      <p class="mb-1"><strong>Speed:</strong> <%= number_with_delimiter(spaceship.max_speed) %> mph</p>
      <p class="mb-3"><strong>Size:</strong> <%= spaceship.size.capitalize %></p>

      <%= link_to 'View Details', spaceship_path(spaceship), class: 'btn btn-primary mt-auto' %>
    </div>
  </div>
</div>
