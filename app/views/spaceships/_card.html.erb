<div class="col">
  <div class="card card-spaceship h-100 shadow-sm">
    <% if spaceship.photo.attached? %>
      <%= image_tag spaceship.photo, class: 'card-img-top', style: 'height: 200px; object-fit: cover; border-radius: 12px 12px 0 0;' %>
    <% end %>
    <div class="card-body d-flex flex-column">
      <h5 class="card-title mb-2"><%= spaceship.name %></h5>
      <p class="mb-1"><strong>Price:</strong> <span class="price">$<%= number_with_delimiter(spaceship.price) %></span></p>
      <p class="mb-1"><strong>Speed:</strong> <%= number_with_delimiter(spaceship.max_speed) %> mph</p>
      <p class="mb-3"><strong>Size:</strong> <%= spaceship.size.capitalize %></p>
      <p class="mb-2"><strong>Rating:</strong> <span class="rating">
        <% if spaceship.rating.present? && spaceship.rating > 0 %>
          <%= "â­" * spaceship.rating %>
        <% else %>
          <span class="text-muted">No ratings yet</span>
        <% end %>
      </span></p>
      <%= link_to 'View Details', spaceship_path(spaceship), class: 'btn btn-primary mt-auto' %>
    </div>
  </div>
</div>
