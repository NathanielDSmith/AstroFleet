<div class="container my-4">
  <div class="mb-4"><%= link_to '<< Spaceship showroom', spaceships_path, class: 'text-decoration-none' %></div>
  <div class="row">
    <div class="card-trip col-8 mb-4">
      <img src="https://cdn.mos.cms.futurecdn.net/AKbyqTKUkicsYGx3xwe3HA.jpg" />
      <div class="card-trip-infos">
        <div>
          <h2>Your Spaceship 🛸 ➪ <%= @spaceship.name %></h2>
          <p>Reature: <%= @spaceship.features %></p>
          <p>Maximum Speed 🚀 ➪ <%= @spaceship.max_speed %>Km/h</p>
          <p>Size 👨🏼‍🚀 ➪ <%= @spaceship.size %></p>
          <p>Price 💵 ➪ <%= @spaceship.price %> $/day</p>
          <p>Rating: <%= '⭐️' * @spaceship.rating.round %></p>
          <p>Description: <%= @Spaceship.description %></p>
        </div>
      </div>
    </div>
    <div class="col-4">
      <%= render "spaceships/form", spaceship: @spaceship, booking: @booking%>
    </div>

  </div>
</div>
