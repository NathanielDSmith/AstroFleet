<div class="container bg-secondary rounded">
  <%= link_to '<< Spaceship showroom', spaceships_path, class: 'text-decoration-none text-info' %>
  <div class="card-trip">
    <div>
      <p><%= @spaceship.photo %></p>
      <h2>Your Spaceship 🛸 ➪ <%= @spaceship.name %></h2>
      <p>Maximum Speed 🚀 ➪ <%= @spaceship.max_speed %></p>
      <p>Size 👨🏼‍🚀 ➪ <%= @spaceship.size %></p>
      <p>Price 💵 ➪ <%= @spaceship.price %> /day</p>
    </div>
  </div>
  <%= render "spaceships/form", spaceship: @spaceship, booking: @booking%>

</div>
